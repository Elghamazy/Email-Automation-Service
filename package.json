{
  "name": "ai-business-emailer",
  "version": "1.0.0",
  "description": "AI-powered business proposal email system",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "email-campaign": "./dist/cli/index.js"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "cli": "node --loader ts-node/esm src/cli/index.ts"
  },
  "devDependencies": {
    "@types/email-validator": "^1.0.6",
    "@types/express-rate-limit": "^6.0.0",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "commander": "^11.0.0",
    "dotenv": "^17.2.1",
    "email-validator": "^2.0.4",
    "express-rate-limit": "^7.1.0",
    "inquirer": "^9.2.10",
    "nodemailer": "^7.0.5"
  }
}
